{
  "name": "@muon/cosmwander",
  "version": "0.2.0",
  "scripts": {
    "start": "nodemon",
    "start:prod": "node src/server.js",
    "clean": "rimraf ./dist",
    "build": "npm run clean && babel src -d dist/src --extensions \".ts\"",
    "test": "npm run test:watch",
    "test:watch": "jest --watch",
    "test:coverage": "jest --collectCoverage",
    "lint": "eslint . --ext .ts",
    "prettier": "prettier --write src/**/*.ts"
  },
  "author": "Muonlabs",
  "license": "MIT",
  "dependencies": {
    "@cosmjs/amino": "^0.29.0",
    "@cosmjs/cosmwasm-stargate": "^0.30.1",
    "@cosmjs/proto-signing": "^0.29.0",
    "@cosmjs/stargate": "^0.29.0",
    "@cosmjs/tendermint-rpc": "^0.29.0",
    "chain-registry": "^1.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cosmjs-types": "^0.5.1",
    "dotenv": "^16.0.3",
    "esbuild-runner": "^2.2.1",
    "express": "^4.18.1",
    "helmet": "^6.0.0",
    "jsonschema": "^1.4.1",
    "mongoose": "^6.6.3",
    "node-cache": "^5.1.2",
    "nodemon": "^2.0.20",
    "pino": "^8.6.1",
    "pino-pretty": "^9.1.0",
    "to-json-schema": "^0.2.5",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/node": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@chain-registry/types": "^0.11.0",
    "@types/express": "^4.17.14",
    "@types/node": "^18.15.11",
    "babel-plugin-module-resolver": "^4.1.0",
    "esbuild": "^0.15.10",
    "eslint": "^8.24.0",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "exec": "babel-node -x \".ts\" src/server.ts",
    "watch": [
      "src",
      "yarn.lock"
    ],
    "delay": "1500",
    "ext": "json,ts"
  }
}
